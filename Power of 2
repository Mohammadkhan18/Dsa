
class Solution{
    public:
    // Function to check if given number n is a power of two.
    bool isPowerofTwo(long long n){
         
       while(n>0 && n%2==0)
       {
           n=n/2;
       }
       
       //   return (n==1)?true:false;
       if(n==1)
        return true;
       else 
        return false;   
        
    }
};
